<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.christian.sensorlister2.MainActivity">

     <TableLayout
        android:id="@+id/tag_tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_column="1"
                android:text="@string/tag_Sensor"
                android:padding="20dip"
                android:layout_width="100dip"
                android:layout_height="100dip"/>

            <TextView
                android:layout_column="2"
                android:text="@string/tag_available"
                android:padding="20dip"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

            <TextView
                android:layout_column="3"
                android:text="@string/tag_Info"
                android:padding="20dip"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_column="1"
                android:text="@string/accelerometer"
                android:padding="20dip"
                android:layout_height="100dip"
                android:layout_width="match_parent"
                android:id="@+id/textView" />

            <TextView
                android:layout_column="2"
                android:text="FALSE"
                android:id="@+id/AccStatus"
                android:padding="20dip"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ViewInfo"
                android:id="@+id/clickBtnAccelInfo"
                android:layout_column="3"
                android:onClick="clickBtnAccelInfo"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
